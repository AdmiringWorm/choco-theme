@{
    @* To remove top notice alert, replace the string below *@
    string topNoticeText = "<a href='https://docs.google.com/forms/d/e/1FAIpQLSejFh4PTDnC_RKw2wdONnj-Kuz9bgxDLQe2Ldv6BIaPvK7qvg/viewform' target='blank'>Fill out our survey for a chance to win &#x1F36B; Chocolatey goodies &#x1F36B;</a>";

    if (!string.IsNullOrEmpty(topNoticeText))
